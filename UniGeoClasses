classe Ponto():
	func_construtora(x, y):
		coordenada_x = x
		coordenada_y = y
	distancia_entre_pontos(x, y):
		retorna sqrt((coordenada_x - x) * (coordenada_x - x) + (coordenada_y - y) * (coordenada_y - y))

classe Circulo():
	func_construtora(raio):
		raio_circulo = raio
	
	area():
		retorna	3.14*(raio_circulo*raio_circulo)

	circunferencia():
		retorna 2*3.14*raio_circulo0

classe Quadrado():
	func_construtora(lado):
		lado_quadrado = lado
	
	area():
		retorna lado_quadrado*lado_quadrado
	perimetro():
		retorna lado_quadrado*4
	diagonal()
		retorna lado_quadrado*1.41

classe Retangulo():
	func_construtora(base, altura)
		base_retangulo = base
		altura_retangulo = altura

	area():
		retorna base_retangulo*altura_retangulo
	perimetro()
		retorna (2*base_retangulo + 2*altura_retangulo)
	diagonal():
		retorna sqrt((base_retangulo*base_retangulo) + (altura_retangulo*altura_retangulo))

classe Triangulo_equilatero():
	func_construtora(lado):
		lado_triangulo = lado
	area():
		retorna ((lado_triangulo*lado_triangulo)*1,7)/4
	altura():
		retorna (lado_triangulo*1,7)/2
	perimetro():
		retorna lado_triangulo*3


